{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ng serve",
      "type": "shell",
      "command": "ng",
      "args": ["serve", "--configuration", "development"],
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Compiled successfully"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
