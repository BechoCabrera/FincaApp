{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ng serve",
      "type": "shell",
      "command": "ng",
      "args": ["serve", "--configuration", "development", "--poll", "2000"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Initial Chunk Files.*$",
          "endsPattern": "^.*Application bundle generation complete.*$"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
