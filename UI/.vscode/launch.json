{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Angular Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///*": "*",
        "webpack:///./src/*": "${webRoot}/src/*"
      },
      "pathMapping": {
        "/": "${workspaceFolder}/",
        "/src/": "${workspaceFolder}/src/"
      },
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "preLaunchTask": "ng serve",
      "preLaunchTaskWaitOnClose": false
    }
  ]
}
